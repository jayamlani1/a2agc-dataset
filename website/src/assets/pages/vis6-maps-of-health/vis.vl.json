{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "name": "source",
    "url": "assets/generated/visualization6/data.csv",
    "format": {
      "type": "csv",
      "parse": {
        "PERIOD": "date",
        "DOD": "date",
        "RANK": "number",
        "AGE": "number",
        "AGE_RANK": "number",
        "ALL_TYPES": "number",
        "HEALTH_ENCOUNTERS": "number",
        "HEALTH_RANK": "number",
        "OPIOID_PRESCRIPTIONS": "number",
        "INCARCERATIONS": "number",
        "OVERDOSES": "number",
        "OVERDOSE_RANK": "number"
      }
    }
  },
  "datasets": {
    "sortable": [
      {
        "FIELD": "AGE_RANK",
        "LABEL": "Age"
      },
      {
        "FIELD": "HEALTH_RANK",
        "LABEL": "# Health encounters"
      },
      {
        "FIELD": "OVERDOSE_RANK",
        "LABEL": "# Overdoses"
      }
    ]
  },
  "transform": [
    {
      "calculate": "round(12 * (datum.DOD - datum.PERIOD) / 3.154e+10)",
      "as": "TIME_BEFORE_DEATH"
    },
    {
      "filter": "datum.TIME_BEFORE_DEATH >= 0"
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "ALL_TYPES",
          "as": "NUM_ENCOUNTERS_TOTAL"
        }
      ],
      "groupby": [
        "CASE_NUMBER"
      ]
    }
  ],
  "params": [
    {
      "name": "sortable__labels",
      "expr": "pluck(data('sortable'), 'LABEL')"
    },
    {
      "name": "sort_by__label",
      "expr": "(sort_by__raw.LABEL || [])[0]"
    },
    {
      "name": "sort_by",
      "expr": "data('sortable')[indexof(sortable__labels, sort_by__label)]"
    },
    {
      "name": "sort_by__field",
      "expr": "(sort_by || {}).FIELD || 'RANK'"
    }
  ],
  "hconcat": [
    {
      "title": " ",
      "width": 900,
      "height": 20,
      "data": {
        "name": "processed_source"
      },
      "transform": [
        {
          "fold": [
            "ALL_TYPES",
            "HEALTH_ENCOUNTERS",
            "OPIOID_PRESCRIPTIONS",
            "INCARCERATIONS",
            "OVERDOSES"
          ],
          "as": [
            "ENCOUNTER_TYPE",
            "COUNT"
          ]
        },
        {
          "lookup": "ENCOUNTER_TYPE",
          "from": {
            "key": "ENCOUNTER_TYPE",
            "data": {
              "values": [
                {
                  "ENCOUNTER_TYPE": "ALL_TYPES",
                  "Encounter Type": "All Types"
                },
                {
                  "ENCOUNTER_TYPE": "HEALTH_ENCOUNTERS",
                  "Encounter Type": "Health Encounters"
                },
                {
                  "ENCOUNTER_TYPE": "OPIOID_PRESCRIPTIONS",
                  "Encounter Type": "Opiod Prescriptions"
                },
                {
                  "ENCOUNTER_TYPE": "INCARCERATIONS",
                  "Encounter Type": "Incarcerations"
                },
                {
                  "ENCOUNTER_TYPE": "OVERDOSES",
                  "Encounter Type": "Overdoses"
                }
              ]
            },
            "fields": [
              "Encounter Type"
            ]
          }
        }
      ],
      "view": {
        "stroke": null
      },
      "mark": {
        "type": "area",
        "line": {
          "size": 0.5
        }
      },
      "encoding": {
        "row": {
          "field": "RANK",
          "type": "nominal",
          "bin": false,
          "header": null,
          "spacing": -20
        },
        "x": {
          "field": "TIME_BEFORE_DEATH",
          "type": "quantitative",
          "title": "Years Before Death",
          "axis": {
            "orient": "top",
            "labelExpr": "datum.value / 12",
            "values": [
              0,
              12,
              24,
              36,
              48,
              60,
              72,
              84,
              96,
              108,
              120,
              132,
              144,
              156,
              168,
              180
            ]
          },
          "scale": {
            "domainMin": 0,
            "range": [
              "width",
              0
            ]
          }
        },
        "y": {
          "field": "COUNT",
          "type": "quantitative",
          "scale": {
            "zero": true
          },
          "stack": "zero",
          "axis": {
            "title": null,
            "labels": false,
            "ticks": false,
            "grid": false
          }
        },
        "color": {
          "field": "Encounter Type",
          "type": "nominal",
          "title": "Encounter Type",
          "scale": {
            "domain": [
              "All Types",
              "Health Encounters",
              "Opiod Prescriptions",
              "Incarcerations",
              "Overdoses"
            ],
            "range": [
              "#e5dcc5ff",
              "#9fc893ff",
              "#fbdb39ff",
              "#1a659eff",
              "#bc1041ff"
            ]
          }
        },
        "tooltip": [
          {
            "field": "CASE_NUMBER",
            "type": "nominal",
            "title": "Case Number"
          },
          {
            "field": "AGE",
            "type": "quantitative",
            "title": "Age at Death"
          },
          {
            "field": "PERIOD",
            "type": "temporal",
            "timeUnit": "yearquarter",
            "title": "Quarter"
          },
          {
            "field": "Encounter Type",
            "type": "nominal",
            "title": "Event"
          },
          {
            "field": "COUNT",
            "type": "quantitative",
            "title": "# Days event occurred"
          },
          {
            "field": "TOTAL_HEALTH",
            "type": "quantitative",
            "title": "Total # of Health Events"
          },
          {
            "field": "TOTAL_OVERDOSE",
            "type": "quantitative",
            "title": "Total # of Overdoses"
          }
        ]
      }
    },
    {
      "vconcat": [
        {
          "width": 200,
          "height": 400,
          "view": {
            "stroke": null
          },
          "mark": "bar",
          "params": [
            {
              "name": "rank",
              "select": {
                "type": "interval",
                "encodings": [
                  "y"
                ],
                "mark": {
                  "fill": "#6ea7ef",
                  "fillOpacity": 0.15
                }
              }
            }
          ],
          "transform": [
            {
              "filter": {
                "param": "age",
                "empty": true
              }
            },
            {
              "filter": {
                "param": "encounters",
                "empty": true
              }
            },
            {
              "calculate": "datum[sort_by__field]",
              "as": "FINAL_RANK"
            },
            {
              "aggregate": [
                {
                  "op": "max",
                  "field": "TIME_BEFORE_DEATH",
                  "as": "TIME_BEFORE_DEATH"
                }
              ],
              "groupby": [
                "RANK",
                "FINAL_RANK"
              ]
            }
          ],
          "encoding": {
            "y": {
              "field": "RANK",
              "type": "nominal",
              "sort": {
                "field": "FINAL_RANK"
              },
              "axis": null
            },
            "x": {
              "field": "TIME_BEFORE_DEATH",
              "type": "quantitative",
              "title": "Years Before Death",
              "axis": {
                "orient": "top",
                "labelExpr": "datum.value / 12",
                "values": [
                  0,
                  60,
                  120
                ]
              },
              "scale": {
                "domainMin": 0,
                "range": [
                  "width",
                  0
                ]
              }
            },
            "color": {
              "value": "#e5dcc5ff"
            }
          }
        },
        {
          "mark": "bar",
          "params": [
            {
              "name": "age",
              "select": {
                "type": "interval",
                "encodings": [
                  "x"
                ],
                "mark": {
                  "fill": "#6ea7ef",
                  "fillOpacity": 0.15
                }
              }
            }
          ],
          "transform": [
            {
              "aggregate": [
                {
                  "op": "average",
                  "field": "AGE",
                  "as": "AGE"
                }
              ],
              "groupby": [
                "CASE_NUMBER"
              ]
            }
          ],
          "encoding": {
            "x": {
              "field": "AGE",
              "type": "quantitative",
              "sort": "ascending",
              "bin": true,
              "title": "Age"
            },
            "y": {
              "aggregate": "count",
              "title": "Number of Persons",
              "axis": {
                "orient": "right"
              }
            },
            "color": {
              "value": "#6ea7ef"
            }
          }
        },
        {
          "mark": "bar",
          "params": [
            {
              "name": "encounters",
              "select": {
                "type": "interval",
                "encodings": [
                  "x"
                ],
                "mark": {
                  "fill": "#6ea7ef",
                  "fillOpacity": 0.15
                }
              }
            }
          ],
          "transform": [
            {
              "aggregate": [
                {
                  "op": "sum",
                  "field": "ALL_TYPES",
                  "as": "NUM_ENCOUNTERS_TOTAL"
                }
              ],
              "groupby": [
                "CASE_NUMBER"
              ]
            }
          ],
          "encoding": {
            "x": {
              "field": "NUM_ENCOUNTERS_TOTAL",
              "type": "quantitative",
              "sort": "ascending",
              "bin": true,
              "title": "Total Number of Encounters"
            },
            "y": {
              "aggregate": "count",
              "title": "Number of Persons",
              "axis": {
                "orient": "right",
                "values": [
                  0,
                  10,
                  100,
                  500,
                  1000,
                  2000,
                  5000,
                  10000,
                  20000
                ]
              },
              "scale": {
                "type": "symlog"
              }
            },
            "color": {
              "value": "#6ea7ef"
            }
          }
        }
      ]
    },
    {
      "mark": "text",
      "data": {
        "name": "sortable"
      },
      "view": {
        "strokeWidth": 0,
        "strokeOpacity": 0
      },
      "params": [
        {
          "name": "sort_by__raw",
          "select": {
            "type": "point",
            "toggle": false
          },
          "bind": "legend",
          "value": [
            {
              "LABEL": "Health encounters"
            }
          ]
        }
      ],
      "encoding": {
        "opacity": {
          "field": "LABEL",
          "title": "Sort By",
          "type": "ordinal",
          "legend": {
            "orient": "right",
            "legendX": 0,
            "legendY": 0,
            "symbolSize": 0
          }
        }
      }
    }
  ],
  "config": {
    "axis": {
      "grid": true,
      "domain": false
    }
  }
}
